# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.IndexController.index

# Widgets
GET     /vulnerableWidgets                    controllers.VulnerableWidgetController.listWidgets
POST    /vulnerableWidgets                    controllers.VulnerableWidgetController.createWidget
GET     /securedWidgets                       controllers.SecuredWidgetController.listWidgets
POST    /securedWidgets                       controllers.SecuredWidgetController.createWidget
GET     /gptSecuredWidgets                    controllers.GPTSecuredWidgetController.listWidgets
POST    /gptSecuredWidgets                    controllers.GPTSecuredWidgetController.createWidget

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
